<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans default-autowire="byName">
    <!-- 配置velocity引擎 -->
    <bean id="velocityConfigurer" class="org.springframework.web.servlet.view.velocity.VelocityConfigurer">
        <property name="resourceLoaderPath">
            <value>/</value>  <!-- 模板存放的路径 -->
        </property>
        <property name="configLocation">
            <value>classpath:config/velocity.properties</value>
        </property>
        <property name="velocityProperties">
            <props>
                <prop key="directive.foreach.counter.name">loopCounter</prop>
                <prop key="directive.foreach.counter.initial.value">0</prop>
                <prop key="directive.foreach.iterator.name">loopHasNext</prop>
            </props>
        </property>
    </bean>

    <!--配置视图的显示:配置附加工具，以及将后缀为vm的文件交给下面的Resolver处理 VelocityLayoutViewResolver layout  VelocityViewResolver 正常视图 -->
    <bean id="viewResolver" class="org.springframework.web.servlet.view.velocity.VelocityLayoutViewResolver">
        <property name="toolboxConfigLocation" value="classpath:toolbox.xml"/> <!--toolbox配置文件路径-->
        <property name="prefix" value="/static/"/> <!-- 视图文件的前缀，即存放的路径 -->
        <property name="suffix" value=".html" /> <!-- 视图文件的后缀名 -->
        <property name="layoutUrl" value="/static/layout/layout.html" /> <!--指定layout文件-->
        <property name="contentType" value="text/html;charset=UTF-8" /> <!--指定编码-->
        <property name="exposeSpringMacroHelpers" value="true" /> <!--是否使用spring对宏定义的支持-->
        <property name="layoutKey" value="layout"></property>
        <!--<property name="screenContentKey" value="screen_content" />-->

        <!--<property name="dateToolAttribute">-->
            <!--<value>dateTool</value> &lt;!&ndash;日期函数名称&ndash;&gt;-->
        <!--</property>-->
        <!--<property name="numberToolAttribute">-->
            <!--<value>numberTool</value> &lt;!&ndash;数字函数名称&ndash;&gt;-->
        <!--</property>-->
        <property name="viewClass" value="com.flyfire.config.VelocityLayoutToolboxView" /><!-- toolbox 解析 -->
        <property name="allowRequestOverride" value="true" />
        <property name="exposeRequestAttributes" value="true" /> <!--是否开放request属性-->
        <property name="exposeSessionAttributes" value="true" /> <!--是否开放session属性-->
        <property name="requestContextAttribute" value="rc"/> <!--request属性引用名称-->

    </bean>
</beans>
